<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:focusable="false"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:focusable="false"
            android:layout_height="60dp">
            <TextView
                android:id="@+id/moviepp_time"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:text="10:00"
                android:textSize="18sp"
                >
            </TextView>


            <TextView
                android:id="@+id/moviepp_area"
                android:layout_width="wrap_content"
                android:focusable="false"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_toRightOf="@+id/moviepp_time"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:text="1厅"
                android:textSize="18sp"
                >
            </TextView>

            <TextView
                android:id="@+id/moviepp_price"
                android:layout_width="wrap_content"
                android:focusable="false"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:layout_toRightOf="@+id/moviepp_area"
                android:text="28.9元"
                android:textColor="@color/price_red"
                android:textSize="18sp"
                >
            </TextView>

            <TextView

                android:id="@+id/moviepp_xzbtn"
                android:layout_width="wrap_content"
                android:background="@drawable/btnshape"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_toRightOf="@+id/moviepp_price"
                android:textSize="15dp"
                android:textColor="@color/price_red"
                android:text="选座购票">
            </TextView>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>