<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MovieManageActivity">

    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:focusable="false"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/moviepp_image"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:focusable="false"
                android:src="@drawable/lb1"
                >
            </ImageView>
            <TextView
                android:id="@+id/moviepp_name"
                android:layout_width="match_parent"
                android:focusable="false"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:layout_toRightOf="@+id/moviepp_image"
                android:singleLine="true"
                android:maxEms="8"
                android:ellipsize="end"
                android:text="影片名:长津湖"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"
                >
            </TextView>

            <TextView
                android:id="@+id/moviepp_zyactor"
                android:layout_width="match_parent"
                android:focusable="false"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:singleLine="true"
                android:maxEms="8"
                android:ellipsize="end"
                android:text="主演:吴京,易烊千玺"
                android:textSize="15sp"
                android:layout_toRightOf="@+id/moviepp_image"
                android:layout_below="@+id/moviepp_name"
                android:layout_marginBottom="10dp"
                >
            </TextView>
            <TextView
                android:id="@+id/moviepp_dyactor"
                android:layout_width="match_parent"
                android:focusable="false"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:singleLine="true"
                android:maxEms="8"
                android:ellipsize="end"
                android:layout_toRightOf="@+id/moviepp_image"
                android:text="导演:陈凯歌,林超贤"
                android:textSize="15sp"
                android:layout_below="@+id/moviepp_zyactor"
                android:layout_marginBottom="10dp"
                >
            </TextView>
            <TextView
                android:id="@+id/moviepp_price"
                android:layout_width="wrap_content"
                android:focusable="false"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:layout_toRightOf="@+id/moviepp_image"
                android:layout_below="@id/moviepp_dyactor"
                android:text="价格:28.9"
                android:gravity="center"
                android:textColor="@color/price_red"
                android:textSize="15sp"
                >
            </TextView>

            <TextView
                android:id="@+id/moviepp_totaltime"
                android:layout_width="wrap_content"
                android:focusable="false"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:layout_below="@id/moviepp_dyactor"
                android:text="时长:180分"
                android:gravity="center"
                android:layout_toRightOf="@+id/moviepp_price"
                android:textSize="15sp"
                >
            </TextView>


            <TextView
                android:id="@+id/moviepp_info"
                android:layout_width="match_parent"
                android:focusable="false"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:layout_below="@id/moviepp_price"
                android:layout_toRightOf="@+id/moviepp_image"
                android:text="简介:xxxxxxxxxxxxxyyyyyyyyyyyyyyyyyyyyyyyyyyyyy"
                android:textSize="15sp"
                >
            </TextView>

        </RelativeLayout>


    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical"
        android:fadingEdge="vertical">

        <!-- 影片排片start -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">


            <!--电影列表start-->
            <LinearLayout
                android:id="@+id/moviepplistView_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp">

                <ListView
                    android:id="@+id/movieppListViewId"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></ListView>

            </LinearLayout>
            <!--影片排片end-->

        </LinearLayout>

        <!-- 影片排片end -->
    </ScrollView>

</LinearLayout>